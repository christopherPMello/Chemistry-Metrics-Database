<!--Allow user to provide input so they can create records in the table -->

<link rel="stylesheet" href="../css/tableStyle.css">

<div id="formsWrap" class="col-sm-6 offset-sm-3 text-center">
     <h1>Insert Technician Data</h1>
     <form id="newTechnician">
          <fieldset>
               <fieldset>
                    <div class="form-group row">
                         <label for="firstnameInput" class="col-sm-2 col-form-label">First Name</label>
                    <div class="col-sm-10">
                          <input type="text" class="form-control" id="firstnameInput" name="firstnameInput" size="30" maxlength="100">
                    </div>
                    </div>
               </fieldset>
               
               <fieldset>
			     <div class="form-group row">
                         <label class="col-sm-2 col-form-label">Last Name</label>
                    <div class="col-sm-10">
                         <input class="form-control" type="text" id="lastnameInput" name="lastnameInput" size="30" maxlength="100">
                    </div>
                    </div>
               </fieldset>
               
		  <button class="btn btn-success" type="data" onclick="addRecord()">Create Technician</button>
		  </fieldset>
     </form>
</div>

</br>
</br>

{{{body}}}

<!--Build the Table if Technicians exists -->

{{#if results}}
     <div id="tble">
	<table id="technicianTable" class="table table-light">
           <thead class="thead-dark">
		<tr>
			<th>ID</th>
			<th>First Name</th>
			<th>Last Name</th>
			<th></th>
              
		</tr>
          </thead>
        
        {{#each results}}
            <tr id="tableRow">
                <td id="techID">{{this.Technician_ID}}</td>
                <td id="firstName">{{this.First_Name}}</td>
                <td id="lastName">{{this.Last_Name}}</td>
                <td id="deleteButton" name={{this.Technician_ID}}><input type="button" name="deleteButtonValue" value="Delete" onClick="deleteRecord({{this.Technician_ID}})"><input type="hidden" value="{{this.Technician_ID}}" id="techID"></td>
            </tr>
        {{/each}}
		</table>
		{{else}}
		<table id="technicianTable"></table>
		<h1 id="noRecords">There aren't any records in the table</h1>
    {{/if}}
    </div>
	
	
	<script id="techPageJavaScript" src="/javaScript/techPageSqlScript.js"></script>