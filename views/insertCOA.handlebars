<!--Allow user to provide input so they can create records in the table -->

      <link rel="stylesheet" href="../css/tableStyle.css">
      <link rel="stylesheet" href="../css/formStyle.css">
      <!-- includes menu bar -->
            <div id="container" class="container">
                <div id="formsWrap" class="col-sm-6 offset-sm-3 text-center">
                        <h1>Insert COA Data</h1>
                    <form id="form" action="#" method="POST" class="justify-content-center">
                        <div class="form-group row">
                            <label for="customerName" class="col-sm-2 col-form-label">Customer Name</label>
                            <div class="col-sm-10">
                             <input name="customerName" type="text" class="form-control" required="required">
                            </div>
                        </div>
                        <div class="input-group mb-3">
                          <span>Status</span>
                                <div class="input-group-prepend" id="radioInput">
                                  <div class="input-group-text">
                                    <label for="initalCheck">
                                    <input type="radio" id="initalCheck" name="check" value="created"> Created
                                  </div>
                                </div>
                              <div class="input-group-prepend">
                                    <div class="input-group-text">
                                    <label for="completeCheck">
                                    <input type="radio" id="in_progress" name="check" id="rButton" value="in progress"> In-Progress
                                    </div>
                              </div>
                               <div class="input-group-prepend">
                                    <div class="input-group-text">
                                    <label for="completeCheck">
                                    <input type="radio" id="completeCheck" name="check" id="rButton" value="complete"> Complete
                                    </div>
                              </div>
                            </div>
                          <div class="form-group row">
                            <label for="coaSendDate" class="col-sm-2 col-form-label">COA Send Date</label>
                            <div class="col-sm-10">
                             <input name="coaSendDate" type="datetime-local" class="form-control">
                            </div>
                        </div>
                            <button type="submit" class="btn btn-success">Insert</button>
                    </form>
                </div>
            </div>
			
			
<!--Display the contents of the table -->
            
    {{#if this.errorMsg}}
		<h1>The insert failed.  Please ensure foreign key requirements are met</h1>	
    {{else if this.results}}
            <div id="tble">
            <table class="table table-light" id="tbl">
                    <thead class="thead-dark">
                      <tr>
                {{#each header}}
                        <th scope="col">{{this}}</th>
                {{/each}}
                      </tr>
                    </thead>
                    <tbody>
                {{#each results}}
                      <tr>
                          {{#each this}}
                              <td>{{this}}</td>
                          {{/each}}
                      </tr>
                {{/each}}
                    </tbody>
            </table>
            </div>
    {{/if}}