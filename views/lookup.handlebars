<!--Allow user to provide input so they can create records in the table -->

<div id="formsWrap" class="col-sm-6 offset-sm-3 text-center">
     <h1>Enter text to search the COA table for</h1>
     <form id="searchCOATable">
          <fieldset>
               <fieldset class="justify-content-center">
                    <div class="form-group row">
                         <label for="searchTextValue" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                          <input type="text" class="form-control" id="searchTextValue" name="searchTextValue" size="30" maxlength="100">
                    </div>
                    </div>
               </fieldset>
          
<h3>Use the checkboxes to search the following columns:</h3>     
                                <div class="input-group-prepend" id="radioInput">
                                  <div class="input-group-text">
                                    <label for="initalCheck">
                                    <input type="checkbox" id="Report_ID" name="Report_ID" value=1 checked>Report ID
                                  </div>
                                </div>
                              <div class="input-group-prepend">
                                    <div class="input-group-text">
                                    <label for="completeCheck">
                                    <input type="checkbox" id="Customer_Name" name="Customer_Name" value=10 checked>Customer Name
                                    </div>
                              </div>
                               <div class="input-group-prepend">
                                    <div class="input-group-text">
                                    <label for="completeCheck">
                                    <input type="checkbox" id="Report_Status" name="Report_Status" value=100 checked>Report Status
                                    </div>
                              </div>
							  <div class="input-group-prepend">
                                    <div class="input-group-text">
                                    <label for="completeCheck">
                                    <input type="checkbox" id="COA_Send_Date" name="COA_Send_Date" value="1000" checked>COA Send Date
                                    </div>
                              </div>
							<button class="btn btn-success" type="data" onclick="searchRecord()">Search</button>
                                   </fieldset>
		  </fieldset>
     </form>
</div>

<!--Display the results of the search -->

 <h1 id="userAlert"></h1>	
<table id="searchTable" class="table table-light"></table>
	

