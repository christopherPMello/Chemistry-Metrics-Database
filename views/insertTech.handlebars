<!--Allow user to provide input so they can create records in the table -->

      <link rel="stylesheet" href="../css/tableStyle.css">
      <!-- includes menu bar -->
            <div id="container" class="container">
                <div id="formsWrap" class="col-sm-6 offset-sm-3 text-center">
                        <h1>Insert Technician Data</h1>
                    <form id="form" action="#" method="POST" class="justify-content-center">
                          <div class="form-group row">
                            <label for="firstName" class="col-sm-2 col-form-label">First Name</label>
                            <div class="col-sm-10">
                           <input name="firstName" type="text" class="form-control" required="required">
                            </div>
                        </div>
                          <div class="form-group row">
                            <label for="lastName" class="col-sm-2 col-form-label">Last Name</label>
                            <div class="col-sm-10">
                            <input name="lastName" type="text" class="form-control" required="required">
                            </div>
                        </div>
                            <button type="submit" class="btn btn-success">Insert</button>
                    </form>
                </div>
            </div>
			
<!--Display the contents of the table -->
			
    {{#if this.errorMsg}}
		<h1>The insert failed.  Please ensure foreign key requirements are met</h1>	
    {{else if this.results}}
            <div id="tble">
            <table class="table table-light" id="tbl">
                    <thead class="thead-dark">
                      <tr>
                {{#each header}}
                        <th scope="col">{{this}}</th>
                {{/each}}
                      </tr>
                    </thead>
                    <tbody>
                {{#each results}}
                      <tr>
                          {{#each this}}
                              <td>{{this}}</td>
                          {{/each}}
                      </tr>
                {{/each}}
                    </tbody>
            </table>
            </div>
    {{/if}}